+        if (element.getAttribute('status') !== 'hide') {
+            element.setAttribute('status', 'hide');
+            element.nextElementSibling.style.display = 'none';
+        } else {
+            element.setAttribute('status', 'expand');
+            element.nextElementSibling.style.display = 'block';
+        }
+    }
+</script>
